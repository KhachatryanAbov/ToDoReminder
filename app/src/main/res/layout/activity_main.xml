<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abov.khachatryan.todoreminder.general.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="@integer/i2">

        <TextView
            android:id="@+id/date_text_view"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i1"
            android:padding="@dimen/d16"
            android:textSize="@dimen/s16"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/change_date_text_view"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i1"
            android:padding="@dimen/d16"
            android:fontFamily="sans-serif-medium"
            android:text="@string/change"
            android:textSize="@dimen/s15"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="@integer/i2">

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i1"
            android:padding="@dimen/d16"
            android:textSize="@dimen/s16"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/change_time_text_view"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i1"
            android:padding="@dimen/d16"
            android:fontFamily="sans-serif-medium"
            android:text="@string/change"
            android:textSize="@dimen/s15"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="@integer/i2">

        <EditText
            android:id="@+id/description_edit_text_view"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i1"
            android:padding="@dimen/d16"
            android:textSize="@dimen/s16"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/holo_blue_dark"
            android:hint="@string/description" />

        <TextView
            android:id="@+id/add_todo_text_view"
            android:layout_width="@dimen/d0"
            android:layout_height="wrap_content"
            android:layout_weight="@integer/i1"
            android:padding="@dimen/d16"
            android:fontFamily="sans-serif-medium"
            android:text="@string/add"
            android:textSize="@dimen/s15"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/todo_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>

